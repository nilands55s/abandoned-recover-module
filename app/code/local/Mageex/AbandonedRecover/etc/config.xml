<?xml version="1.0"?>
<config>
    <modules>
        <Mageex_AbandonedRecover>
            <version>0.1.0</version>
        </Mageex_AbandonedRecover>
    </modules>
    <frontend>
        <routers>
            <abandonedrecover>
                <use>standard</use>
                <args>
                    <module>Mageex_AbandonedRecover</module>
                    <frontName>abandonedrecover</frontName>
                </args>
            </abandonedrecover>
        </routers>
        <layout>
            <updates>
                <abandonedrecover>
                    <file>abandonedrecover.xml</file>
                </abandonedrecover>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<abandonedrecover>
				<use>admin</use>
				<args>
					<module>Mageex_AbandonedRecover</module>
					<frontName>abandonedrecover</frontName>
				</args>
			</abandonedrecover>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<abandonedrecover>
					<file>abandonedrecover.xml</file>
				</abandonedrecover>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <abandonedrecover>
                <class>Mageex_AbandonedRecover_Model</class>
                <resourceModel>abandonedrecover_mysql4</resourceModel>
            </abandonedrecover>
            <abandonedrecover_mysql4>
                <class>Mageex_AbandonedRecover_Model_Mysql4</class>
                <entities>
                    <abandonedrecover>
                        <table>abandonedrecover</table>
                    </abandonedrecover>
                </entities>
            </abandonedrecover_mysql4>
			<core>
                <rewrite>
                    <email_template>Mageex_AbandonedRecover_Model_Template</email_template>
                </rewrite>
            </core>
        </models>
        <resources>
            <abandonedrecover_setup>
                <setup>
                    <module>Mageex_AbandonedRecover</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </abandonedrecover_setup>
            <abandonedrecover_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </abandonedrecover_write>
            <abandonedrecover_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </abandonedrecover_read>
        </resources>
        <blocks>
            <abandonedrecover>
                <class>Mageex_AbandonedRecover_Block</class>
            </abandonedrecover>
        </blocks>
        <helpers>
            <abandonedrecover>
                <class>Mageex_AbandonedRecover_Helper</class>
            </abandonedrecover>
        </helpers>
    </global>
	<crontab>
        <jobs>
            <abandonedrecover_sendmail>
                <run>
                    <model>abandonedrecover/observer::scheduledCron</model>
                </run>
            </abandonedrecover_sendmail>
        </jobs>
    </crontab>
</config>